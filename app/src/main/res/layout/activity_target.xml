<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.tyrion.glidedemo.widget.CircleLoading
        android:id="@+id/custom_cl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        circle:divideWidth="10dp"
        circle:inCircleColor="#ffffff"
        circle:outCircleColor="#ffffff"
        circle:cirlceProgress="70"
        circle:position="1"
        circle:outCircleRadius="100dp"
        circle:outCircleStrokeWidth="2.5dp"/>

    <ImageView
        android:id="@+id/simple_target_iv"
        android:layout_width="200dp"
        android:layout_height="200dp" />
</LinearLayout>
